{
  "name": "@repo/ingest",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist --clean",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/trpc": "workspace:*",
    "@repo/utils": "workspace:*",
    "@hono/node-server": "^1.13.1",
    "hono": "^4.6.3",
    "stripe": "^16.12.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.8.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
