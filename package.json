{
  "name": "something-something",
  "version": "0.1.0",
  "private": true,
  "description": "A modern monorepo application built with pnpm workspaces",
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.18.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "format:check": "biome format --check .",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:watch": "vitest",
    "prepare": "husky install",
    "db:generate": "pnpm --filter @repo/db generate",
    "db:push": "pnpm --filter @repo/db db:push",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "db:reset": "pnpm --filter @repo/db db:reset",
    "db:seed": "pnpm --filter @repo/scripts seed",
    "db:studio": "pnpm --filter @repo/db db:studio",
    "scripts:cron": "pnpm --filter @repo/scripts cron",
    "scripts:migrate": "pnpm --filter @repo/scripts migrate",
    "scripts:backup": "pnpm --filter @repo/scripts backup",
    "web:dev": "pnpm --filter @repo/web dev",
    "web:build": "pnpm --filter @repo/web build",
    "web:start": "pnpm --filter @repo/web start",
    "ingest:dev": "pnpm --filter @repo/ingest dev",
    "ingest:build": "pnpm --filter @repo/ingest build",
    "ingest:start": "pnpm --filter @repo/ingest start",
    "ui:add": "pnpm --filter @repo/ui ui:add",
    "docker:up": "docker-compose up --build",
    "docker:up:prod": "docker-compose -f docker-compose.yml up --build",
    "docker:down": "docker-compose down",
    "docker:down:clean": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build --no-cache"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
